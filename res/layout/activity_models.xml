<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <LinearLayout
        android:id="@+id/LinearLayout_cabecera"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/azul"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ingreso_titulo_modelos"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.56"
            android:gravity="center"
            android:text="@string/modelos"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/modelo_favoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_favorite"
            android:textSize="@dimen/BotonGrande" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ingreso_progreso_modelo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <ListView
        android:id="@+id/lista_de_modelos"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:drawSelectorOnTop="false" >
    </ListView>
    
</LinearLayout>

